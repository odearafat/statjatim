<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bttn_white"
    tools:context=".activity.MainActivity"
    android:paddingRight="30dp"
    android:paddingLeft="30dp">

    <ImageView
        android:id="@+id/imageLoginUser"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_login_illustration"
        android:layout_centerHorizontal="true"></ImageView>

    <TextView
        android:id="@+id/loginHeadingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="PERBARUI PASSWORD"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/imageLoginUser"
        android:layout_centerHorizontal="true"
        ></TextView>
<RelativeLayout
    android:id="@+id/container_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/loginHeadingTv">
    <TextView
        android:id="@+id/emailLoginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email "
        android:paddingRight="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        ></TextView>
    <TextView
        android:id="@+id/bintangMailLoginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* "
        android:textColor="@color/orange"
        android:layout_toRightOf="@+id/emailLoginTv"
        android:layout_marginTop="10dp"
        ></TextView>
    <EditText
        android:id="@+id/emailLoginEt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/emailLoginTv"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="7pt"
        android:background="@drawable/bg_blue_spinner"
        android:inputType="textEmailAddress">
    </EditText>
</RelativeLayout>
    <Button
        android:id="@+id/bttDaftar"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:text="Kirim Link Pergantian Password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/container_email"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_dark_blue_big_circle"
        ></Button>
</RelativeLayout>