<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmen.ChatUsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/chatUsViewName"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="54.749dp"
            android:background="@drawable/ic_daun_bar"
            android:layout_alignParentRight="true">

        </ImageView>

        <ImageButton
            android:id="@+id/buttonBackChatUs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
            >
        </ImageButton>

        <TextView
            android:id="@+id/textBarChatUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat Us"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/buttonBackChatUs"
            />

    </RelativeLayout>
    <WebView
        android:id="@+id/wvChatUs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chatUsViewName"/>

</RelativeLayout>