<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/dataViewName"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="54.749dp"
            android:background="@drawable/ic_daun_bar"
            android:layout_alignParentRight="true">

        </ImageView>
        <ImageButton
            android:id="@+id/buttonBackData"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
            >
        </ImageButton>

        <TextView
            android:id="@+id/txt_bar_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/buttonBackData"
            />

        <ImageButton
            android:id="@+id/btt_set_data"
            android:layout_width="5dp"
            android:layout_height="19dp"
            android:background="@drawable/ic_three_circle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            ></ImageButton>
        <RelativeLayout
            android:id="@+id/containerWilayahData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_bar_data"
            android:layout_toRightOf="@+id/buttonBackData"
            android:background="@drawable/bg_dark_blue_big_circle"
            >
            <ImageView
                android:id="@+id/img_location"
                android:layout_width="8dp"
                android:layout_height="11.13dp"
                android:background="@drawable/ic_location"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_centerVertical="true"
                ></ImageView>
            <TextView
                android:id="@+id/txt_wilayah_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="9dp"
                android:text="Provinsi Jawa Timur"
                android:layout_toRightOf="@id/img_location"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                ></TextView>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relativeLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataViewName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        >

        <EditText
            android:id="@+id/editTextFindData"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:hint="Cari Data.."
            android:textColorHint="@color/white_with_alpha"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/bg_blue_search_text_field"
            />
        <Button
            android:id="@+id/bttFindData"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Cari"
            android:textColor="@color/white"
            android:background="@drawable/bg_dark_blue_btt_search"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_below="@id/relativeLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecycleViewListSosduk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="auto_fit"
                />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBarData"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        ></ProgressBar>



</RelativeLayout>