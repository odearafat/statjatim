<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space_white"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <ImageView
        android:id="@+id/ic_no_internet_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/ic_no_internet_small_30p">
    </ImageView>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERIKSA KONEKSI"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/ic_no_internet_IV"></TextView>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koneksi lambat \n Atau Tidak ada Internet"
        android:lines="2"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"
        android:layout_below="@id/tv1"></TextView>
    <Button
        android:id="@+id/reloadConnection"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Muat Ulang"
        android:textColor="@color/white"
        android:background="@drawable/bg_dark_blue_btt_search"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        ></Button>
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>