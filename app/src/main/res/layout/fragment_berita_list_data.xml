<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_data_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_blue_small">
        <ImageView

            android:layout_height="15dp"
            android:layout_width="15dp"
            android:background="@drawable/ic_berita"
            android:backgroundTint="@color/white"
            android:layout_margin="5dp"
            />
        </RelativeLayout>

        <TextView
            android:id="@+id/judulBerita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pelantikan Pejabat Administrator dan Pengawas di Lingkungan BPS Provinsi Jawa Timur"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/foto"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="35dp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/tglKegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23 April 2020"
            android:textSize="10dp"
            android:textStyle="italic"
            android:layout_below="@id/judulBerita"
            android:layout_toRightOf="@id/foto"
            android:padding="3dp"
            android:textColor="@color/orange"
            />
        <RelativeLayout
            android:id="@+id/titik"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_circle_blue_small"
            android:layout_toRightOf="@id/tglKegiatan"
            android:layout_below="@id/judulBerita"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            >
        </RelativeLayout>
        <TextView
            android:id="@+id/jenisKegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kegiatan Statistik"
            android:textSize="10dp"
            android:textStyle="italic"
            android:layout_below="@id/judulBerita"
            android:layout_toRightOf="@id/titik"
            android:padding="3dp"
            android:textColor="@color/orange"
            />
        <ImageView
            android:id="@+id/dokumentasiFoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/tglKegiatan"
            android:layout_toRightOf="@id/foto"
            android:background="@drawable/bg_circle_blue_big"
            android:scaleType="centerCrop">

        </ImageView>
